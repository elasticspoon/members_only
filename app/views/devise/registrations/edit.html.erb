<div class="w-full py-6 min-h-screen sm:max-w-md mt-2 mx-6">
  <h2 class='mb-6 text-center text-5xl font-extrabold'>Edit Profile</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |form| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field mb-4">
      <%= form.label :name, class: 'block mb-1' %>
      <%= form.text_field :name, class: 'px-3 py-2 border border-gray-300 focus:border-red-300 focus:putline-none focus:ring focus:ring-red-200 focus:ring-opacity-50 rounded-md shadow-sm disabled:bg-gray-100 mt-1 block w-full'%>
    </div>
    <div class="field mb-4">
      <%= form.label :username, class: 'block mb-1' %>
      <%= form.text_field :username, class: 'px-3 py-2 border border-gray-300 focus:border-red-300 focus:putline-none focus:ring focus:ring-red-200 focus:ring-opacity-50 rounded-md shadow-sm disabled:bg-gray-100 mt-1 block w-full'%>
    </div>
    <div class="field mb-4">
      <%= form.label :email, class: 'block mb-1' %>
      <%= form.email_field :email, autocomplete: "email", class: 'px-3 py-2 border border-gray-300 focus:border-red-300 focus:putline-none focus:ring focus:ring-red-200 focus:ring-opacity-50 rounded-md shadow-sm disabled:bg-gray-100 mt-1 block w-full'%>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="field mb-4">
      <%= form.label :current_password, class: 'block mb-1' %>
      <%= form.password_field :current_password, class: 'px-3 py-2 border border-gray-300 focus:border-red-300 focus:putline-none focus:ring focus:ring-red-200 focus:ring-opacity-50 rounded-md shadow-sm disabled:bg-gray-100 mt-1 block w-full'%>
    </div>
    <div class="field mb-4">
      <%= form.label :password, value: 'New Password', class: 'block mb-1' %><i>(leave blank if you don't want to change it)</i>
      <%= form.password_field :password, class: 'px-3 py-2 border border-gray-300 focus:border-red-300 focus:putline-none focus:ring focus:ring-red-200 focus:ring-opacity-50 rounded-md shadow-sm disabled:bg-gray-100 mt-1 block w-full'%>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
    <div class="field mb-4">
      <%= form.label :password_confirmation, class: 'block mb-1' %>
      <%= form.password_field :password_confirmation, class: 'px-3 py-2 border border-gray-300 focus:border-red-300 focus:putline-none focus:ring focus:ring-red-200 focus:ring-opacity-50 rounded-md shadow-sm disabled:bg-gray-100 mt-1 block w-full'%>
    </div>
    <div class="mt-6">
      <%= form.submit 'Update', class: 'w-full inline-flex items-center justify-center px-4 py-2 bg-red-600 border border-transparent rounded-md font-bold text-white capitalize transition disabled:opacity-25 focus:outline-none hover:bg-red-700 active:bg-red-700 focus:border-red-700 focus:ring focus:ring-red' %>
    </div>
    <div class="mt-6 text-center text-sm">
      Unhappy? <%= button_to "Cancel your account.", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'underline font-bold' %>
    </div>
  <% end %>
</div>

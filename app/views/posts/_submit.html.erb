<div class="bg-green-300 p-5 mx-10 my-5 rounded-lg h-48">
  <%= form_with model: @post, class: 'w-full h-full flex flex-col' do |form| %>
    <%= form.text_area :body, placeholder: 'Start a post...', autofocus: true, class: 'border-none w-full rounded-md h-full resize-none' %>
    <%= form.submit value: nil, class: 'self-end bg-white p-2 mt-2 rounded-md border-2 border-transparent hover:border-2 hover:border-black w-fit' %>
  <% end %>
</div>

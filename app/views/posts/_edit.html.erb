<%= form_with model:resource, url: resource.path_self, class: 'w-full h-full flex flex-col' do |form| %>
  <%= form.text_area :body, placeholder: 'Start a post...', rows: 5, autofocus: true, class: 'border-none w-full rounded-md h-full resize-none' %>
  <%= render "users/inline_errors", errors: resource.errors.full_messages %>
  <%= form.submit 'Submit', class: 'self-end bg-white p-2 mt-2 rounded-md border-2 border-transparent hover:border-2 hover:border-black w-fit' %>
<% end %>
